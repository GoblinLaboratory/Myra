{
    "colors": {
        "white": "#FFFFFFFF",
        "grey": "#AAAAAAFF"
    },
    "fonts": {
        "default-font": "default_font.fnt",
        "default-font-small": "default_font_small.fnt"
    },
    "spriteSheet": "default_uiskin.atlas",
    "textBlock": {
        "font": "default-font",
        "disabledTextColor": "grey",
        "textColor": "white"
    },
    "textField": {
        "font": "default-font",
        "textColor": "white",
        "disabledTextColor": "grey",
        "selection": "selection",
        "background": "textfield",
//        "focusedBorder": "window",
        "cursor": "cursor",
        "messageFont": "default-font",
        "messageTextColor": "grey"
    },
    "scrollArea": {
        "horizontalScroll": "scroll-horizontal",
        "horizontalScrollKnob": "scroll-knob-horizontal",
        "verticalScroll": "scroll",
        "verticalScrollKnob": "scroll-knob-vertical"
    },
    "button": {
        "background": "button",
        "pressedBackground": "button-down",
        "overBackground": "button-over",
        "label": {
            "font": "default-font",
            "textColor": "white",
            "disabledTextColor": "grey"
        },
        "variants": {
            "blue": { 
                "background": "button-blue",
                "pressedBackground": "button-blue-down",
                "overBackground": "button-blue-down"
            }
        }
    },
    "imageButton": {
        "background": "button",
        "pressedBackground": "button-down",
        "overBackground": "button-down"
    },
    "textButton": {
        "background": "button",
        "pressedBackground": "button-down",
        "overBackground": "button-over",
        "label": {
            "font": "default-font",
            "textColor": "white",
            "disabledTextColor": "grey"
        },
        "variants": {
            "blue": { 
                "background": "button-blue",
                "pressedBackground": "button-blue-down",
                "overBackground": "button-blue-down"
            }
        }
    },
    "checkBox": {
        "label": {
            "font": "default-font",
            "textColor": "white"
        },
        "image": {
            "background": "vis-check",
            "overBackground": "vis-check-over",
            "pressedImage": "vis-check-tick"
        }
    },
    "spinButton": {
        "background": "textfield",
        "upButton": {
            "background": "button",
            "pressedBackground": "button-down",
            "overBackground": "button-over",
            "widthHint": 12,
            "heightHint": 12,
            "image": {
                "image": "select-up"
            }
        },
        "downButton": {
            "background": "button",
            "pressedBackground": "button-down",
            "overBackground": "button-over",
            "widthHint": 12,
            "heightHint": 12,
            "image": {
                "image": "select-down"
            }
        },
        "textField": {
            "font": "default-font",
            "textColor": "white",
            "disabledTextColor": "grey",
            "selection": "selection",
            "cursor": "cursor",
            "messageFont": "default-font",
            "messageTextColor": "grey"
        }
    },
    "horizontalSlider": {
        "background": "slider",
        "knob": {
            "image": {
                "image": "slider-knob",
                "overImage": "slider-knob-over",
                "pressedImage": "slider-knob-down",
                "disabledImage": "slider-knob-disabled"
            }
        }
    },
    "verticalSlider": {
        "background": "slider-vertical",
        "knob": {
            "image": {
                "image": "slider-knob",
                "overImage": "slider-knob-over",
                "pressedImage": "slider-knob-down",
                "disabledImage": "slider-knob-disabled"
            }
        }
    },
    "horizontalProgressBar": {
        "background": "progressbar",
        "filled": "progressbar-filled"
    },
    "verticalProgressBar": {
        "background": "progressbar-vertical",
        "filled": "progressbar-filled-vertical"
    },
    "comboBox": {
        "background": "default-select",
        "label": {
            "font": "default-font",
            "textColor": "white"
        },
        "itemsContainer": {
            "background": "select-box-list-bg"
        },
        "comboBoxItem": {
            "overBackground": "button-over",
            "pressedBackground": "button-down",
            "label": {
                "font": "default-font",
                "textColor": "white"
            }
        }
    },
    "listBox": {
        "background": "button",
        "listBoxItem": {
            "overBackground": "button-over",
            "pressedBackground": "list-selection",
            "padding": {
                "left": 5.0,
                "right": 5.0
            },
            "label": {
                "font": "default-font",
                "textColor": "white",
                "disabledTextColor": "grey"
            }
        }
    },
    "tree": {
        "rowSelectionBackground": "tree-selection",
        "rowSelectionBackgroundWithoutFocus": "splitpane-over",
        "rowHoverBackground": "button-over",       
        "mark": {
            "image": {
                "image": "tree-plus",
                "pressedImage": "tree-minus"
            },
            "label": {
                "font": "default-font",
                "textColor": "white",
                "disabledTextColor": "grey"
            }
        }
    },
    "horizontalSplitPane": {
        "handle": {
            "background": "splitpane",
            "overBackground": "splitpane-over"
        }
    },
    "verticalSplitPane": {
        "handle": {
            "background": "splitpane-vertical",
            "overBackground": "splitpane-vertical-over"
        }
    },
    "horizontalMenu": {
        "background": "button",
        "separator": {
            "image": "separator",
            "thickness": 3
        },
        "menuItem": {
            "overBackground": "button-over",           
            "pressedBackground": "button-down",
            "padding": {
                "left": 5.0,
                "right": 5.0,
                "bottom": 2.0
            },
            "label": {
                "font": "default-font",
                "textColor": "white",
                "disabledTextColor": "grey"
            }
        }
    },
    "verticalMenu": {
        "background": "button",
        "border": "border",
        "separator": {
            "image": "separator-menu",
            "thickness": 4,
            "padding": {
                "top": 2.0,
                "bottom": 2.0
            }
        },
        "menuItem": {
            "pressedBackground": "button-down",
            "overBackground": "button-over",
            "iconWidth": 22,
            "shortcutWidth": 22,
            "padding": {
                "left": 5.0,
                "right": 5.0
            },
            "label": {
                "font": "default-font",
                "textColor": "white",
                "disabledTextColor": "grey"
            }
        }
    },
    "window": {
        "background": "window",
        "padding": {
            "top": 5.0,
            "bottom": 5.0,
            "left": 5.0,
            "right": 5.0
        },
        "title": {
            "font": "default-font",
            "textColor": "white"
        },
        "closeButton": {
           "overBackground": "button-over",
           "pressedBackground": "button-red",
           "padding": {
                "top": 5.0,
                "bottom": 5.0,
                "left": 5.0,
                "right": 5.0
            },
            "image": {
                "image": "icon-close"
            }
        }
    }
}